<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <item name="colorPrimary">#222222</item>
    <item name="colorPrimaryDark">#111111</item>
    <item name="colorAccent">#337AB7</item>
    <item name="android:windowBackground">@color/windowBackgroundLight</item>
    <item name="android:colorActivatedHighlight">@color/ColorActivatedHighlightLight</item>
  </style>

  <style name="MainTheme.Dark" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <item name="colorPrimary">#111111</item>
    <item name="colorPrimaryDark">#000000</item>
    <item name="colorAccent">#007ACC</item>
    <item name="android:windowBackground">@color/windowBackgroundDark</item>
    <item name="android:colorActivatedHighlight">@color/ColorActivatedHighlightDark</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#007ACC</item>
  </style>
</resources>
